{
  "name": "perf-utils-js",
  "version": "1.0.0",
  "main": "dist/index.js",
  "repository": "https://github.com/mrampazz/perf-utils-js.git",
  "author": "Marco <mrampazz@gmail.com>",
  "license": "MIT",
  "scripts": {
    "ci": "rm -rf node_modules && yarn install --frozen-lockfile",
    "build": "tsc --project .",
    "start": "node dist/index.js",
    "test": "jest --coverage"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 80,
        "branches": 80,
        "functions": 80,
        "lines": 80
      }
    },
    "coverageReporters": [
      "lcov"
    ]
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "^16.10.9",
    "coveralls": "^3.1.1",
    "jest": "^27.2.5",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.3.0",
    "tslint": "^6.1.3",
    "typescript": "^4.4.4"
  }
}
